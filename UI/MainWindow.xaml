<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        DataContext="{Binding Path=MainWindowViewModel.Queue, Source={StaticResource ViewModelLocator}}"
        Width="525">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="23" />
		</Grid.RowDefinitions>
		<ListBox ItemsSource="{Binding Path=Slots}"
		         BorderThickness="1"
		         BorderBrush="#FF0034D1" />
		<StatusBar Grid.Row="1"/>
	</Grid>
</Window>